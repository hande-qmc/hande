[DEFAULT]
cppflags_opt = -DHAVE_SSE2 -DDISABLE_LANCZOS -DDET_SIZE=64

[main]
fc = ifort
cc = icc
cxx = icpc
ld = ifort
libs = -lirc -limf -mkl -lmkl_lapack95_lp64 -Wl,--start-group -lmkl_intel_lp64 -lmkl_sequential -lmkl_core -Wl,--end-group -lpthread -cxxlib -lhdf5_fortran -luuid -llua
f90_module_flag = -module

[opt]
cppflags = %(cppflags_opt)s
fflags = -O3 -qopenmp -ipo
cxxflags = -O3 -qopenmp -ipo
ldflags =  -qopenmp -ipo
cflags = -O3 -qopenmp -ipo

[dbg]
cppflags = %(cppflags_opt)s -DDEBUG
fflags = -g -traceback -CB -qopenmp -check bounds
cxxflags = -g -traceback  -qopenmp
