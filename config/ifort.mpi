[DEFAULT]
cppflags_opt = -DHAVE_SSE2 -DPARALLEL

[main]
fc = mpif90
cc = mpicc
cxx = mpiCC
ld = impif90
libs = -ltrlan_mpi -lscalapack -lblacsc -lblacsf77 -lblacsmpi -llapack -lblas -cxxlib -lhdf5_fortran -luuid -llua
f90_module_flag = -module

[opt]
cppflags = %(cppflags_opt)s
fflags = -O3
cxxflags = -O3

[dbg]
cppflags = %(cppflags_opt)s -DDEBUG
fflags = -g -traceback -CB
cxxflags = -g -traceback
